<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mechanic.MechanicRepairing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Request Details"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/light_blue"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Repairing"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/RepAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_pinlocation"
                android:drawablePadding="5dp"
                android:text="Address"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RepVName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RepAddress"
                android:layout_marginTop="20dp"
                android:text="VehicleName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/RepService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RepVName"
                android:layout_marginTop="20dp"
                android:text="Service"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/RepRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RepService"
                android:layout_marginTop="20dp"
                android:text="Remarks"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/RepRName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RepRemarks"
                android:layout_marginTop="20dp"
                android:text="User Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/RepRPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RepRName"
                android:layout_marginTop="20dp"
                android:text="User Phone"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/RepVPlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RepRPhone"
                android:layout_marginTop="20dp"
                android:text="Plate No"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/RepPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RepVPlate"
                android:layout_marginTop="20dp"
                android:text="Price"
                android:textSize="20sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnAdjustFee"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Adjust Fee"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnRepComplete"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Request Complete"
            android:textSize="18sp" />


    </LinearLayout>

</ScrollView>